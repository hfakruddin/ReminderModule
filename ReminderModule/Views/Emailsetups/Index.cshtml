                @Html.DisplayNameFor(model => model.LogFilePath)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmailHost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Port)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnableSSL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HUName)
