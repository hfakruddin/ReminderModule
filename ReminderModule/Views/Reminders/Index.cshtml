@model IEnumerable<ReminderModule.Data.Models.Reminder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a> | <a asp-controller="Emailsetups" asp-action="Edit" asp-route-id="1">Email Setup</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReminderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailSent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReminderDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailSent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReminderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReminderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReminderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
